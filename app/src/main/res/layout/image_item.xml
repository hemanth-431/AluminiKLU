<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/upload_profile"
            android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameupload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/doppio_one"
                    android:hint="name"

                    android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
android:textSize="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="time"

                android:textColor="@color/colorAccent"></TextView>
            </LinearLayout>
        </LinearLayout>




        <ImageView
            android:id="@+id/image_view_up"
            android:layout_width="400dp"

            android:layout_height="500dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/paragraph1"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel"
            android:textColor="@color/lightblack"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"





            />



        <RelativeLayout
            android:id="@+id/likeimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/unfill"
                android:layout_marginLeft="5dp"
                android:layout_width="60dp"
                android:layout_height="40dp"

                android:foregroundGravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:src="@drawable/heartunfill"></ImageView>



            <ImageView

                android:id="@+id/filled"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:layout_marginTop="6dp"
                android:src="@drawable/fillred"></ImageView>

            <ImageView

                android:id="@+id/comment"

                android:layout_marginLeft="70dp"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:foregroundGravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/comment"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
android:textColor="#898780"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="sans-serif-black"
                    android:hint="0"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/comments"
                    android:textColor="#898780"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="sans-serif-black"
                    android:hint="Comments"
                    android:textSize="15dp"></TextView>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>