<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".home">

  <ImageButton
      android:id="@+id/button3"

      android:layout_width="40dp"
      android:background="#f8fbf8"
      android:layout_height="40dp"
    android:src="@drawable/gallery1"></ImageButton>
  


  <FrameLayout
      android:layout_width="match_parent"
      android:layout_below="@+id/textinput_counter"
      android:layout_above="@+id/progress_circle"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageing"
        android:layout_width="300dp"
        android:layout_marginLeft="38dp"
        android:layout_height="300dp"
        android:layout_above="@id/progress_circle"

        android:background="@drawable/klulogo"

        android:layout_marginTop="160dp" />

    <ImageView
        android:id="@+id/image_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/progress_circle"
        android:layout_below="@id/button3"
android:layout_marginBottom="10dp"

        android:layout_marginTop="50dp" />
  </FrameLayout>


  <ProgressBar
      android:id="@+id/progress_circle"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:layout_width="match_parent"
      android:indeterminate="true"

      android:progressTint="@color/colorAccent"
      android:secondaryProgressTint="@android:color/primary_text_dark"
      android:layout_height="wrap_content"
      android:layout_above="@+id/button_upload"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="15dp" />



  <ImageView
      android:id="@+id/button_upload"

      android:layout_width="50dp"
    android:src="@drawable/ic_upload"

      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_height="40dp"
     ></ImageView>

</RelativeLayout>